<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="@dimen/margin_small_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/event_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/end_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/margin_normal_10dp"
                android:layout_marginTop="@dimen/margin_normal_10dp"
                android:text="Expires: 12/30/2015"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_normal_12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/margin_normal_10dp"
                android:layout_marginTop="@dimen/margin_normal_10dp"
                android:src="@drawable/ic_temp_blue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_normal_10dp">

                <TextView
                    android:id="@+id/total_budget_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small_5dp"
                    android:background="@drawable/button_bg_primary_nopadding"
                    android:drawableLeft="@drawable/dollar"
                    android:drawablePadding="@dimen/padding_small_5dp"
                    android:gravity="center"
                    android:padding="@dimen/padding_small_5dp"
                    android:text="50,000"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_12sp" />

                <TextView
                    android:id="@+id/coast_per_seats_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small_5dp"
                    android:background="@drawable/button_bg_primary_nopadding"
                    android:drawableLeft="@drawable/ic_pause"
                    android:drawablePadding="@dimen/padding_small_5dp"
                    android:gravity="center"
                    android:padding="@dimen/padding_small_5dp"
                    android:text="$200"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_12sp" />

                <TextView
                    android:id="@+id/total_seats_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small_5dp"
                    android:background="@drawable/button_bg_primary_nopadding"
                    android:drawableLeft="@drawable/ic_sold"
                    android:drawablePadding="@dimen/padding_small_5dp"
                    android:gravity="center"
                    android:padding="@dimen/padding_small_5dp"
                    android:text="2,000"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_12sp" />

                <TextView
                    android:id="@+id/total_like_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small_5dp"
                    android:background="@drawable/button_bg_primary_nopadding"
                    android:drawableLeft="@drawable/ic_like"
                    android:drawablePadding="@dimen/padding_small_5dp"
                    android:gravity="center"
                    android:padding="@dimen/padding_small_5dp"
                    android:text="3000"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_12sp" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/concert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_small_5dp"
            android:paddingLeft="@dimen/margin_normal_10dp"
            android:paddingTop="@dimen/margin_small_5dp"
            android:text="Miseducation of Lauryn Hill"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_large_16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small_5dp"
            android:paddingLeft="@dimen/margin_normal_10dp"
            android:paddingTop="@dimen/margin_small_5dp">

            <TextView
                android:id="@+id/instigator_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inotigotor - ABC"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal_12sp" />

            <TextView
                android:id="@+id/doer_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal_10dp"
                android:text="Doer - ABC"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_normal_12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_normal_10dp"
            android:paddingLeft="@dimen/margin_normal_10dp"
            android:paddingTop="@dimen/margin_small_5dp"
            android:text="Perform at the concert your first Album."
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_normal_12sp"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small_5dp"
            android:paddingLeft="@dimen/margin_normal_10dp"
            android:paddingTop="@dimen/margin_small_5dp">

            <ImageButton
                android:id="@+id/fb_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_fb_circle" />

            <ImageButton
                android:id="@+id/ig_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small_5dp"
                android:layout_toRightOf="@+id/fb_ic"
                android:background="@null"
                android:src="@drawable/ic_instagram_orange" />

            <ImageButton
                android:id="@+id/twitter_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small_5dp"
                android:layout_toRightOf="@+id/ig_ic"
                android:background="@null"
                android:src="@drawable/ic_twitter_cicle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_normal_10dp"
                android:paddingBottom="@dimen/margin_normal_10dp"
                android:paddingTop="@dimen/margin_small_5dp"
                android:text="Read More...."
                android:textColor="@color/textcolorAccent"
                android:textSize="@dimen/text_size_normal_12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
